.profile-page {  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  padding: 36px;  
}  
  
.profile-image {  
  width: 50px; 
  height: 50px; 
  border-radius: 50%; 
  margin-bottom: 16px;  
}  
  
.container {  
  width: 100%; 
}  
  
.info-item {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
  margin-bottom: 8px;  
}  
  
.info-label {  
  font-weight: bold;  
  width: 40%; 
}  
  

.primary-button {  
  margin-top: 16px;  
  padding: 0 16px; 
}