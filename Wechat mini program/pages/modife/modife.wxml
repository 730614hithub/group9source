<form bindsubmit="formSubmit">  
  <view>  
    <view>Name:</view>  
    <input type="text" name="username" value="{{username}}" placeholder="Please enter your name"/>  
  </view>  
  <view>  
    <view>Sex:</view>  
    <input type="text" name="gender" value="{{gender}}" placeholder="Please enter your gender"/> 
  </view>  
  <button formType="submit" type="primary">Submit</button>  
</form>